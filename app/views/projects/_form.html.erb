
<%= render 'shared/errors', obj: @project %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :project_name, class: "form-control", placeholder: "Name of Project", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :control_number %>
        </div>
        <div class="col-md-2">
          <%=f.text_field :control_number, class: "form-control", placeholder: "Control Number", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>

 <% end %>
 <div class="col-md-4 col-md-offset-4">
   [ <%= link_to "Cancel request and return to projects listing", projects_path %> ]
 </div> 
    
  </div>
  
</div>

 